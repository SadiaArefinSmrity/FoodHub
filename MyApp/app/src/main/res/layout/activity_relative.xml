<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/firstElement"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="#e90707"
        />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="#0707e9"
        android:layout_toRightOf="@id/firstElement"
        />

    <EditText
        android:id="@+id/thirdElement"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="#a907e9"
        android:layout_below="@id/firstElement"
        />

    <EditText
        android:id="@+id/fourthElement"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="#0c82f9"
        android:layout_below="@id/thirdElement"
        />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="#12000e"
        android:layout_toRightOf="@id/fourthElement"
        android:layout_below="@id/thirdElement"
        />


</RelativeLayout>
